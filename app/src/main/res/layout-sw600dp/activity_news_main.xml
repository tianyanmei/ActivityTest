<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/news_title_fragmentId"
        android:name="com.example.activitytest.NewsTitleFragment"
        />
    <FrameLayout
        android:id="@+id/news_contents_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3">
        <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/news_contents_fragment"
            android:name="com.example.activitytest.NewsContentFragment"




            />



    </FrameLayout>





</LinearLayout>